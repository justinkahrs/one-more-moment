---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { fade } from "astro:transitions";
import { frontmatter as meta } from "../data/metadata.mdx";

const { title = "Site" } = Astro.props;

const seo = meta.seo || {};

const pageTitle =
  seo.title ||
  `${meta.name}${meta.primaryService ? ` | ${meta.primaryService}` : ""}` ||
  title;

const description = seo.description || (meta.hero && meta.hero.content) || "";

const keywords = [
  seo.cityKeyword,
  seo.serviceKeyword,
  meta.serviceCategory,
  meta.primaryService,
  meta.primaryAudience,
  meta.industryNiche,
  meta.regionsServed,
]
  .filter(Boolean)
  .join(", ");
---

<html lang="en" data-theme="light">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    {keywords && <meta name="keywords" content={keywords} />}
    <meta name="author" content={meta.name} />
    {
      meta.location?.cityState && (
        <meta name="geo.placename" content={meta.location.cityState} />
      )
    }
    {
      meta.location?.state && (
        <meta name="geo.region" content={meta.location.state} />
      )
    }
    <meta name="robots" content="index,follow" />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:site_name" content={meta.name} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_US" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />

    <script is:inline>
      (function () {
        const html = document.documentElement;
        const darkThemes = [
          "aqua",
          "business",
          "dark",
          "synthwave",
          "halloween",
          "forest",
          "black",
          "luxury",
          "dracula",
          "night",
          "coffee",
          "dim",
          "sunset",
          "abyss",
        ];
        const storedTheme = localStorage.getItem("theme");
        const theme = storedTheme || "light";
        html.setAttribute("data-theme", theme);
        if (darkThemes.includes(theme)) {
          html.classList.add("dark");
          html.classList.remove("light");
        } else {
          html.classList.remove("dark");
          html.classList.add("light");
        }
        const storedFont =
          localStorage.getItem("font") ||
          "ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, Noto Sans, Apple Color Emoji, Segoe UI Emoji, Segoe UI Symbol, Noto Color Emoji, sans-serif";
        html.style.setProperty("--font-body", storedFont);
      })();
    </script>
  </head>

  <body class="bg-base-100 text-base-content flex min-h-screen flex-col">
    <Header />
    <main class="flex-1" transition:animate={fade({ duration: 250 })}>
      <slot />
    </main>
    <Footer />

    <script type="module">
      const fonts = {
        system: {
          css: "ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, Noto Sans, Apple Color Emoji, Segoe UI Emoji, Segoe UI Symbol, Noto Color Emoji, sans-serif",
        },
        inter: {
          css: "'Inter', ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif",
          href: "https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap",
          id: "font-inter",
        },
        poppins: {
          css: "'Poppins', ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif",
          href: "https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap",
          id: "font-poppins",
        },
        lora: {
          css: "'Lora', Georgia, Cambria, Times New Roman, Times, serif",
          href: "https://fonts.googleapis.com/css2?family=Lora:wght@400;600;700&display=swap",
          id: "font-lora",
        },
        playfair: {
          css: "'Playfair Display', Georgia, Cambria, Times New Roman, Times, serif",
          href: "https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&display=swap",
          id: "font-playfair",
        },
        jetbrains: {
          css: "'JetBrains Mono', ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, Liberation Mono, Courier New, monospace",
          href: "https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;600;700&display=swap",
          id: "font-jetbrains",
        },
      };

      const darkThemes = [
        "aqua",
        "business",
        "dark",
        "synthwave",
        "halloween",
        "forest",
        "black",
        "luxury",
        "dracula",
        "night",
        "coffee",
        "dim",
        "sunset",
        "abyss",
      ];

      function applyTheme(theme) {
        const html = document.documentElement;
        if (theme) {
          html.setAttribute("data-theme", theme);
          localStorage.setItem("theme", theme);
        } else {
          html.removeAttribute("data-theme");
          localStorage.removeItem("theme");
        }
        if (darkThemes.includes(theme)) {
          html.classList.add("dark");
          html.classList.remove("light");
        } else {
          html.classList.remove("dark");
          html.classList.add("light");
        }
      }

      function ensureFontLoaded(key) {
        const meta = fonts[key];
        if (!meta || !meta.href || !meta.id) return;
        if (document.getElementById(meta.id)) return;
        const link = document.createElement("link");
        link.rel = "stylesheet";
        link.href = meta.href;
        link.id = meta.id;
        document.head.appendChild(link);
      }

      function applyFont(key) {
        const meta = fonts[key] || fonts.system;
        if (meta.href) ensureFontLoaded(key);
        document.documentElement.style.setProperty("--font-body", meta.css);
      }

      function syncThemeFromStorage() {
        const themeSelect = document.querySelector("select[data-choose-theme]");
        const storedTheme = localStorage.getItem("theme") || "light";
        applyTheme(storedTheme);
        if (themeSelect) themeSelect.value = storedTheme;
      }

      function syncFontFromStorage() {
        const fontSelect = document.querySelector("select[data-choose-font]");
        const storedFontKey = localStorage.getItem("font") || "system";
        applyFont(storedFontKey);
        if (fontSelect) fontSelect.value = storedFontKey;
      }

      function initControls() {
        const themeSelect = document.querySelector("select[data-choose-theme]");
        if (themeSelect && !themeSelect.dataset._themeInit) {
          themeSelect.dataset._themeInit = "true";
          themeSelect.addEventListener("change", (e) => {
            const theme = e.target.value;
            applyTheme(theme || "light");
          });
        }

        const fontSelect = document.querySelector("select[data-choose-font]");
        if (fontSelect && !fontSelect.dataset._fontInit) {
          fontSelect.dataset._fontInit = "true";
          fontSelect.addEventListener("change", (e) => {
            const fontKey = e.target.value || "system";
            localStorage.setItem("font", fontKey);
            applyFont(fontKey);
          });
        }
      }

      function onPageLoad() {
        syncThemeFromStorage();
        syncFontFromStorage();
        initControls();
      }

      document.addEventListener("astro:page-load", onPageLoad);
      onPageLoad();
    </script>
  </body>
</html>

---
import Base from "../../layouts/Base.astro";
import { events } from "../../data/events";
import { Image } from "astro:assets";

export function getStaticPaths() {
  return events.map((event) => ({
    params: { slug: event.slug },
    props: { event },
  }));
}

const { event } = Astro.props;
---

<Base title={event.title}>
  <div class="container mx-auto max-w-4xl px-4 py-12">
    {
      event.image && (
        <div class="bg-base-200 mb-12 aspect-video overflow-hidden rounded-3xl md:aspect-[21/9]">
          <Image
            src={event.image}
            alt={event.title}
            class="h-full w-full object-cover"
          />
        </div>
      )
    }

    <div class="mx-auto mb-16 max-w-2xl text-center">
      <h1 class="mb-8 font-serif text-4xl leading-tight font-bold md:text-5xl">
        {event.title}
      </h1>

      <div class="space-y-2 text-lg">
        <p class="font-medium">{event.date}</p>
        <p>{event.time}</p>
        <p class="opacity-75">{event.location}</p>
      </div>
    </div>

    <div class="prose prose-lg mx-auto max-w-2xl font-serif">
      <p>{event.description}</p>

      <div class="not-prose border-base-200 mt-12 border-t pt-8">
        <h3 class="mb-4 font-sans text-2xl font-bold">Want to participate?</h3>
        <p class="mb-6 font-sans opacity-80">
          Volunteers involved in the wish fulfillment process need training and
          collaboration.
        </p>
        <a href="/volunteer" class="btn btn-primary px-8">Get Involved</a>
      </div>
    </div>
  </div>
</Base>

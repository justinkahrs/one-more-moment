---
import Base from "../layouts/Base.astro";
import { frontmatter as metadata } from "../data/metadata.mdx";

const { title, subTitle } = metadata.donationPage;
const { name } = metadata;
---

<Base title={`Donate | ${name}`} description={subTitle}>
  <main class="container mx-auto">
    <div class="min-h-screen bg-[#FFFBF6] pt-12 pb-12 text-center">
      <div class="mx-auto max-w-6xl">
        {/* Header Section */}
        <h1 class="mb-6 font-serif text-5xl text-[#2B2B40] md:text-6xl">
          {title}
        </h1>
        <p
          class="mb-16 text-xl leading-relaxed text-[#333333] md:text-2xl"
        >
          {subTitle}
        </p>
        <iframe
          style="height: 100vh; width: 98%;"
          src="https://www.pledge.to/website-donation-form-7458"
          scrolling="yes"></iframe>
      </div>
    </div>
  </main>
</Base>

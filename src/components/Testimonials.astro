---
import { frontmatter as metadata } from "../data/metadata.mdx";

const TestimonialsData = metadata.testimonialsSection ?? {};
const { title, items: testimonials = [] } = TestimonialsData;

// Gradient colors for each testimonial
const gradients = [
  "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
  "linear-gradient(135deg, # f093fb 0%, #f5576c 100%)",
  "linear-gradient(135deg, #4facfe 0%, #00f2fe 100%)",
  "linear-gradient(135deg, #fa709a 0%, #fee140 100%)",
];
---

<section
  class="bg-gradient-to-br from-purple-50 to-pink-50 p-10 py-20 dark:from-gray-900 dark:to-gray-800"
>
  <h2
    class="gradient-text animate-fade-in-up mb-12 text-center text-4xl font-bold md:text-5xl"
  >
    {title}
  </h2>
  <div
    id="testimonials-carousel"
    class="carousel w-full snap-x snap-mandatory space-x-6 overflow-x-auto scroll-smooth p-4"
    aria-live="polite"
  >
    {
      testimonials.map((t: any, index: number) => (
        <div class="carousel-item w-[85%] snap-start sm:w-[70%] md:w-[45%] lg:w-[35%]">
          <div
            class="testimonial-card hover-lift relative w-full transform rounded-3xl p-8 text-white shadow-2xl transition-all duration-500 hover:scale-105"
            style={`background: ${gradients[index % gradients.length]};`}
          >
            {/* Quote icon */}
            <div class="absolute -top-4 -left-4 flex h-16 w-16 items-center justify-center rounded-full bg-white/20 text-4xl shadow-lg backdrop-blur-sm">
              "
            </div>

            {/* Shimmer border */}
            <div
              class="absolute inset-0 rounded-3xl opacity-0 transition-opacity duration-500 hover:opacity-100"
              style="background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent); background-size: 200% 100%; animation: shimmer 3s infinite;"
            ></div>

            <div class="relative z-10">
              <p class="mb-6 text-lg leading-relaxed italic">"{t.content}"</p>

              <div class="mt-6 flex items-center gap-4">
                {/* Avatar placeholder with gradient */}
                <div class="flex h-12 w-12 items-center justify-center rounded-full bg-white/30 text-xl font-bold shadow-lg backdrop-blur-sm">
                  {t.author.charAt(0)}
                </div>

                <div>
                  <h3 class="text-lg font-bold">{t.author}</h3>
                  {t.title && <p class="text-sm opacity-90">{t.title}</p>}
                </div>
              </div>
            </div>

            {/* Decorative stars */}
            <div class="absolute top-4 right-4 flex gap-1 text-yellow-300">
              {[...Array(5)].map(() => (
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
          </div>
        </div>
      ))
    }
  </div>

  {/* Scroll indicators */}
  <div class="mt-8 flex justify-center gap-2">
    {
      testimonials.map((_: any, index: number) => (
        <div class="h-2 w-2 cursor-pointer rounded-full bg-purple-300 transition-all hover:bg-purple-500" />
      ))
    }
  </div>
</section>

<style>
  .testimonial-card {
    perspective: 1000px;
  }

  .testimonial-card:hover {
    transform: translateY(-8px) rotateY(5deg);
    box-shadow: 0 30px 60px rgba(0, 0, 0, 0.3);
  }

  #testimonials-carousel {
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  #testimonials-carousel::-webkit-scrollbar {
    display: none;
  }
</style>

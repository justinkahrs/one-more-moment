---
import { frontmatter as metadata } from "../data/metadata.mdx";

const FaqData = metadata.faq ?? {};
const { title, items: faqs = [] } = FaqData;
---

<section class="bg-base-100/50 rounded-lg mx-auto mb-20 max-w-3xl py-20 md:my-20">
  <h2
    class="animate-fade-in-up mb-12 text-center text-4xl font-bold md:text-5xl"
  >
    {title}
  </h2>
  <div class="space-y-8">
    {
      faqs.map((item: any, index: number) => (
        <div
          tabindex="0"
          class={`faq-item collapse-arrow from-base-100 to-base-200 hover-lift animate-fade-in-up collapse rounded-2xl border-2 border-transparent bg-linear-to-r stagger-${(index % 6) + 1}`}
          style="opacity: 0;"
        >
          <div class="collapse-title flex items-center gap-3 text-lg font-bold">
            <span>{item.q}</span>
          </div>
          <div class="collapse-content">
            <div
              class="text-base-content/80 pl-11 leading-relaxed"
              set:html={item.a}
            />
          </div>
        </div>
      ))
    }
  </div>
</section>

<style>
  .faq-item:focus,
  .faq-item:has(input:checked) {
    border-color: #d9776e;
    box-shadow: 0 0 20px rgba(217, 119, 110, 0.2);
  }

  .faq-item:hover {
    border-color: #d9776e;
    box-shadow: 0 10px 20px rgba(217, 119, 110, 0.8);
  }

  .gradient-text-hover {
    transition: all 0.3s ease;
  }

  .faq-item:focus .gradient-text-hover,
  .faq-item:has(input:checked) .gradient-text-hover {
    background: linear-gradient(135deg, #d9776e 0%, #d9776e 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .collapse-content {
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
</style>

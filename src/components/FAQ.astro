---
import { frontmatter as metadata } from "../data/metadata.mdx";

const FaqData = metadata.faq ?? {};
const { title, items: faqs = [] } = FaqData;
---

<section class="bg-base-100 mx-auto max-w-3xl p-10 py-20">
  <h2
    class="animate-fade-in-up mb-12 text-center text-4xl font-bold md:text-5xl"
  >
    {title}
  </h2>
  <div class="space-y-4">
    {
      faqs.map((item: any, index: number) => (
        <div
          tabindex="0"
          class={`faq-item collapse-arrow from-base-100 to-base-200 hover-lift animate-fade-in-up collapse rounded-2xl border-2 border-transparent bg-gradient-to-r stagger-${(index % 6) + 1}`}
          style="opacity: 0;"
        >
          <div class="collapse-title flex items-center gap-3 text-lg font-bold">
            <span >{item.q}</span>
          </div>
          <div class="collapse-content">
            <div
              class="text-base-content/80 pl-11 leading-relaxed"
              set:html={item.a}
            />
          </div>
        </div>
      ))
    }
  </div>
</section>

<style>
  .faq-item:focus,
  .faq-item:has(input:checked) {
    border-color: #667eea;
    background: linear-gradient(
      to right,
      rgba(102, 126, 234, 0.05),
      rgba(118, 75, 162, 0.05)
    );
    box-shadow: 0 0 30px rgba(102, 126, 234, 0.2);
  }

  .faq-item:hover {
    border-color: rgba(102, 126, 234, 0.3);
    box-shadow: 0 10px 40px rgba(102, 126, 234, 0.15);
  }

  .gradient-text-hover {
    transition: all 0.3s ease;
  }

  .faq-item:focus .gradient-text-hover,
  .faq-item:has(input:checked) .gradient-text-hover {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .collapse-content {
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
</style>

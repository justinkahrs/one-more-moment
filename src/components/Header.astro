---
import { frontmatter as metadata } from "../data/metadata.mdx";
import clsx from "clsx";

const HeaderData = metadata.header ?? {};
const companyName = metadata.name;
const { navItems = [], cta, sticky } = HeaderData;
---

<div
  class={clsx("navbar bg-base-100 shadow-sm", sticky && "sticky top-0 z-50")}
>
  <div class="navbar-start">
    <div class="dropdown">
      <div
        tabindex="0"
        role="button"
        id="Menu"
        aria-label="Menu"
        class="btn btn-ghost lg:hidden"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h8m-8 6h16"></path>
        </svg>
      </div>
      <ul
        tabindex="-1"
        class="menu menu-md dropdown-content bg-base-100 rounded-box z-1 mt-3 w-52 p-2 shadow"
      >
        {
          navItems.map(({ children, href, name }) =>
            children ? (
              <li>
                {name}
                <ul class="p-2">
                  {children.map(({ href, name }) => (
                    <li>
                      <a href={href}>{name}</a>
                    </li>
                  ))}
                </ul>
              </li>
            ) : (
              <li>
                <a href={href}>{name}</a>
              </li>
            )
          )
        }
      </ul>
    </div>
    <div class="text-xl lg:mx-4">{companyName}</div>
  </div>

  <div class="navbar-center hidden lg:flex">
    <ul class="menu menu-horizontal px-1">
      {
        navItems.map((item) =>
          item.children ? (
            <li>
              <details>
                <summary>{item.name}</summary>
                <ul class="p-2">
                  {item.children.map((child) => (
                    <li>
                      <a href={child.href}>{child.name}</a>
                    </li>
                  ))}
                </ul>
              </details>
            </li>
          ) : (
            <li>
              <a href={item.href}>{item.name}</a>
            </li>
          )
        )
      }
    </ul>
  </div>

  <div class="navbar-end">
    <div class="form-control px-2 pb-2">
      <label for="theme-select" class="label p-0">
        <span class="label-text text-xs">Choose Theme</span>
      </label>
      <select
        id="theme-select"
        class="select select-bordered select-xs"
        data-choose-theme
      >
        <option value="abyss">abyss</option>
        <option value="acid">acid</option>
        <option value="aqua">aqua</option>
        <option value="autumn">autumn</option>
        <option value="black">black</option>
        <option value="bumblebee">bumblebee</option>
        <option value="business">business</option>
        <option value="caramellatte">caramellatte</option>
        <option value="coffee">coffee</option>
        <option value="corporate">corporate</option>
        <option value="cmyk">cmyk</option>
        <option value="cupcake">cupcake</option>
        <option value="cyberpunk">cyberpunk</option>
        <option value="dark">dark</option>
        <option value="dim">dim</option>
        <option value="dracula">dracula</option>
        <option value="emerald">emerald</option>
        <option value="fantasy">fantasy</option>
        <option value="forest">forest</option>
        <option value="garden">garden</option>
        <option value="halloween">halloween</option>
        <option value="lemonade">lemonade</option>
        <option value="light">light</option>
        <option value="lofi">lofi</option>
        <option value="luxury">luxury</option>
        <option value="night">night</option>
        <option value="nord">nord</option>
        <option value="pastel">pastel</option>
        <option value="retro">retro</option>
        <option value="silk">silk</option>
        <option value="sunset">sunset</option>
        <option value="synthwave">synthwave</option>
        <option value="valentine">valentine</option>
        <option value="wireframe">wireframe</option>
        <option value="winter">winter</option>
      </select>
    </div>

    <div class="form-control px-2 pb-2">
      <label for="font-select" class="label p-0">
        <span class="label-text text-xs">Choose Font</span>
      </label>
      <select
        id="font-select"
        class="select select-bordered select-xs"
        data-choose-font
      >
        <option value="system">System Sans</option>
        <option value="inter">Inter</option>
        <option value="poppins">Poppins</option>
        <option value="lora">Lora</option>
        <option value="playfair">Playfair Display</option>
        <option value="jetbrains">JetBrains Mono</option>
      </select>
    </div>

    {
      cta && (
        <a class="btn btn-sm" href={cta.href}>
          {cta.label}
        </a>
      )
    }
  </div>
</div>

---
import { frontmatter as metadata } from "../data/metadata.mdx";

const servicesSection = metadata.servicesSection ?? {};
const { title, items: services = [] } = servicesSection;
---

<section class="bg-white py-20">
  <div class="mx-auto max-w-6xl px-6">
    <h2 class="mb-16 text-center text-3xl font-bold text-[#2B2B40] md:text-4xl">
      {title}
    </h2>

    <div class="grid gap-12 text-center md:grid-cols-3">
      {
        services.map((s: any, index: number) => (
          <div class="flex flex-col items-center">
            <div class="mb-6 flex h-24 w-24 items-center justify-center rounded-full bg-[#E5DACE] text-[#D9776E]">
              {/* Conditional Icon Rendering based on index or ID (using placeholders for now) */}
              {s.icon === "heart" && (
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  class="h-12 w-12"
                >
                  <path d="M11.645 20.91l-.007-.003-.022-.012a15.247 15.247 0 01-.383-.218 25.18 25.18 0 01-4.244-3.17C4.688 15.36 2.25 12.174 2.25 8.25 2.25 5.322 4.714 3 7.688 3A5.5 5.5 0 0112 5.052 5.5 5.5 0 0116.313 3c2.973 0 5.437 2.322 5.437 5.25 0 3.925-2.438 7.111-4.739 9.256a25.175 25.175 0 01-4.244 3.17 15.247 15.247 0 01-.383.219l-.022.012-.007.004-.003.001a.752.752 0 01-.704 0l-.003-.001z" />
                </svg>
              )}
              {s.icon === "stones" && (
                <div class="relative h-12 w-12">
                  <div
                    class="absolute bottom-0 left-0 h-6 w-8 rounded-full bg-[#8C8C8C] opacity-80"
                    style="transform: rotate(-10deg);"
                  />
                  <div
                    class="absolute bottom-4 left-3 h-5 w-7 rounded-full bg-[#A0A0A0] opacity-90"
                    style="transform: rotate(15deg);"
                  />
                </div>
              )}
              {s.icon === "ring" && (
                <div class="h-12 w-12 rounded-full border-8 border-[#D9776E] opacity-80" />
              )}
              {!s.icon && <span class="text-4xl">â˜…</span>}
            </div>

            <h3 class="mb-4 text-xl font-bold text-[#2B2B40]">{s.title}</h3>

            <p class="max-w-xs leading-relaxed text-[#4A4A4A]">
              {s.description}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</section>

---
import Logo from "../assets/OneMoreMoment_horz_Logo_2019-e1555076394163.png";

const currentYear = new Date().getFullYear();
---

<footer class="bg-[#FFFBF6] py-12">
  <div
    class="container mx-auto flex flex-col items-center justify-between gap-8 px-6 md:flex-row"
  >
    <!-- Brand & Copyright -->
    <div
      class="flex flex-col items-center text-center md:items-start md:text-left"
    >
      <div class="mb-2">
        <a href="/" class="flex items-center text-xl font-bold">
          <img
            src={Logo.src}
            class="h-32 w-auto object-contain"
            loading="eager"
          />
        </a>
      </div>
      <p class="text-sm text-black/60">
        Copyright Â© {currentYear} - All rights reserved
      </p>
      <p class="text-sm text-black/60">
        Website by <a
          href="https://www.senna-automation.com/"
          target="_blank"
          rel="noopener noreferrer"
          class="hover-lift p-1 text-black transition-colors"
          >Senna Automation</a
        >
      </p>
    </div>

    <!-- Social Icons -->
    <div class="flex items-center gap-6">
      <a
        href="https://www.facebook.com/onemoremoment.org/"
        target="_blank"
        rel="noopener noreferrer"
        class="hover-lift p-2 text-black transition-colors"

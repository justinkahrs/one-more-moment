---
import { frontmatter as metadata } from "../data/metadata.mdx";
import heroMovie from "../assets/heroMovie.mp4";

const HeroData = metadata.hero ?? {};
const { title, content, cta, subContent } = HeroData;
---

<div
  class="hero relative flex min-h-screen flex-col items-center justify-center overflow-hidden bg-[#FFFBF6] text-[#1D1D1F]"
>
  <video
    autoplay
    loop
    muted
    playsinline
    class="absolute inset-0 -z-0 h-full w-full scale-105 object-cover blur-[2px]"
  >
    <source src={heroMovie} type="video/mp4" />
  </video>

  <!-- Overlay to maintain text contrast if needed, keeping it subtle for now or rely on the light theme text -->
  <div class="absolute inset-0 -z-0 bg-white/30"></div>
  <div
    class="hero-content relative z-10 flex max-w-4xl flex-grow flex-col justify-center px-4 text-center"
  >
    <div
      class="flex flex-col items-center rounded-3xl border border-white/50 bg-white/40 p-8 shadow-xl backdrop-blur-xl md:p-12"
    >
      <h1
        class="mb-6 text-4xl font-bold tracking-tight text-[#2B2B40] md:text-6xl"
      >
        {title}
      </h1>
      <p
        class="mx-auto mb-10 max-w-2xl text-lg leading-relaxed text-[#333333] md:text-xl"
      >
        {content}
      </p>
      <a
        href="/donate"
        class="btn transform rounded-md border-0 bg-[#D9776E] px-8 py-3 text-lg font-semibold text-white shadow-sm transition hover:-translate-y-0.5 hover:bg-[#c5665d]"
      >
        {cta}
      </a>
    </div>
  </div>
</div>

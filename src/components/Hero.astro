---
import { frontmatter as metadata } from "../data/metadata.mdx";
const HeroData = metadata.hero ?? {};
const { title, content, cta, subContent } = HeroData;
---

<div
  class="hero relative flex min-h-screen flex-col items-center justify-center bg-[#FFFBF6] text-[#1D1D1F]"
>
  <div
    class="hero-content flex max-w-4xl flex-grow flex-col justify-center px-4 text-center"
  >
    <h1
      class="mb-6 text-4xl font-bold tracking-tight text-[#2B2B40] md:text-6xl"
    >
      {title}
    </h1>
    <p
      class="mx-auto mb-10 max-w-2xl text-lg leading-relaxed text-[#333333] md:text-xl"
    >
      {content}
    </p>
    <a
      href="/donate"
      class="btn transform rounded-md border-0 bg-[#D9776E] px-8 py-3 text-lg font-semibold text-white shadow-sm transition hover:-translate-y-0.5 hover:bg-[#c5665d]"
    >
      {cta}
    </a>
  </div>

  <div class="w-full max-w-4xl px-4 pb-12">
    <div
      class="flex items-center justify-center gap-4 border-t border-gray-200 pt-8 text-sm font-medium text-[#4A4A4A] md:text-base"
    >
     {subContent.map((item) => (
      <span>â€¢ {item}</span>
     ))}
    </div>
  </div>
